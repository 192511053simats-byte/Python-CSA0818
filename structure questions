2.get input day month year and calculate year?
Ans:
#include <stdio.h>
#include <string.h>
struct birth
{
	int day;
	int month;
	int year;
};
int main()
{
	int n,i,age;
	scanf("%d",&n);
	
	struct birth b[n],t[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&b[i].day);
		scanf("%d",&b[i].month);
		scanf("%d",&b[i].year);
	    scanf("%d",&t[i].day);
		scanf("%d",&t[i].month);
		scanf("%d",&t[i].year);		
	

		age=t[i].year-b[i].year;
		if(t[i].month<b[i].month||t[i].month==b[i].month&&t[i].day<b[i].day)
		{
			age--;
		}
		for(i=0;i<n;i++)
		{
				printf("%d\n %d\n",i+1,age);
		}
	
	}
		

}
