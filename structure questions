1.total of products using structure?
Ans:
#include <stdio.h>
#include <string.h>
struct product
{
	char name[50];
	float price;
	int quantity;
};
int main()
{
	int n,i;
	float total=0;
	scanf("%d",&n);
	struct product p[n];
	for(i=0;i<n;i++)
	{
		printf("Enter name price Quantity ");
		scanf("%s %f %d",p[i].name,&p[i].price,&p[i].quantity);
		total+=p[i].price*p[i].quantity;
	}
	for(i=0;i<n;i++)
	{
		printf("%s\n",p[i].name);
		printf("%.2f\n",p[i].price);
		printf("%d\n",p[i].quantity);
	}
	printf("total cost of product%.2f",total);
}
