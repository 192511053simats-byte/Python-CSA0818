'''#Gp

n = int(input("Enter the number of elements in the sequence: "))
l = []

for i in range(n):
    a = int(input("Enter the number one by one: "))
    l.append(a)

flag = 1  # Assume sequence is GP unless proven otherwise

for i in range(len(l)-2):
    if(l[i+1]/l[i])!=(l[i+2]/l[i+1]):
        flag=0
        break
if flag==1:
    print("follows the gp")
else:
    print("not follows the gp")'''

