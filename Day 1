'''#additive sequence
n=int(input("enter the no of Sequence"))
l=[]
for i in range(n):
    a=int(input("enter the elements one by one"))
    l.append(a)
flag=1
for i in range(len(l)-2):
    if l[i]+l[i+1]!=l[i+2]:
        flag=0
        break

if flag==1:
    print("Yes, It follows the sequence")
else:
    print("No,It does not follow the sequence")'''

